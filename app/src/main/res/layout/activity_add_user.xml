<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayef"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.eroadcar.networkmanagement.activity.LoginActivity">

    <include
        android:id="@+id/top"
        layout="@layout/include_toptitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifity" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_margin="@dimen/five"
        android:background="@drawable/bg_color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/forty"
            android:src="@mipmap/icon_logo_add" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sixty"
            android:layout_marginRight="@dimen/sixty"
            android:layout_marginTop="@dimen/forty"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/icon_add_user" />

            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/store_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入员工姓名"
                android:maxLength="11"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_fourteen" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/sixty"
            android:layout_marginRight="@dimen/sixty"
            android:background="@color/grayef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sixty"
            android:layout_marginRight="@dimen/sixty"
            android:layout_marginTop="@dimen/ten"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/icon_add_mobile" />

            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/employee_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入员工手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_fourteen" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/sixty"
            android:layout_marginRight="@dimen/sixty"
            android:background="@color/grayef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sixty"
            android:layout_marginRight="@dimen/sixty"
            android:layout_marginTop="@dimen/ten"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/icon_login_pwd" />

            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/pwd_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入初始密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_fourteen" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/sixty"
            android:layout_marginRight="@dimen/sixty"
            android:background="@color/grayef" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/sixty"
            android:layout_marginRight="@dimen/sixty"
            android:layout_marginTop="@dimen/fifity"
            android:background="@drawable/btn_select"
            android:enabled="false"
            android:text="@string/add"
            android:textColor="@color/color_btn"
            android:textSize="@dimen/text_sixteen" />


    </LinearLayout>

</RelativeLayout>
