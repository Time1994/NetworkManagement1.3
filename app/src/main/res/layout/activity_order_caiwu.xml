<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayef"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/include_toptitle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/five"
        android:background="@drawable/bg_color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/title_rg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:layout_marginTop="@dimen/five"
                android:background="@color/grayef"
                android:orientation="horizontal"
                android:weightSum="2">


                <RadioButton
                    android:id="@+id/sale_rb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="@dimen/five"
                    android:text="销售订单"
                    android:textColor="@color/color_radiobuttont"
                    android:textSize="@dimen/text_fourteen" />


                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/grayef" />

                <RadioButton
                    android:id="@+id/rent_rb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/five"
                    android:text="租赁订单"
                    android:textColor="@color/color_radiobuttont"
                    android:textSize="@dimen/text_fourteen" />
            </RadioGroup>

            <TextView
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/num_sale_tv"
                android:layout_width="@dimen/ten"
                android:layout_height="@dimen/ten"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/ten"
                android:layout_toLeftOf="@id/dot"
                android:background="@drawable/bg_color_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_twelve"
                android:visibility="gone" />

            <TextView
                android:id="@+id/num_rent_tv"
                android:layout_width="@dimen/ten"
                android:layout_height="@dimen/ten"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/bg_color_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_twelve"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/title_rg"
            android:background="@color/grayef" />

        <RadioGroup
            android:id="@+id/order_rg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginTop="@dimen/five"
            android:background="@color/grayef"
            android:orientation="horizontal"
            android:weightSum="3"
            android:visibility="gone">


            <RadioButton
                android:id="@+id/all_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="全部"
                android:textColor="@color/color_radiobuttont"
                android:textSize="@dimen/text_fourteen" />


            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grayef" />

            <RadioButton
                android:id="@+id/ing_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="待收定金"
                android:textColor="@color/color_radiobuttont"
                android:textSize="@dimen/text_fourteen" />

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grayef" />

            <RadioButton
                android:id="@+id/guo_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="待收全款"
                android:textColor="@color/color_radiobuttont"
                android:textSize="@dimen/text_fourteen" />


        </RadioGroup>

        <RadioGroup
            android:id="@+id/rent_rg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginTop="@dimen/five"
            android:background="@color/grayef"
            android:orientation="horizontal"
            android:weightSum="3"
            android:visibility="gone">


            <RadioButton
                android:id="@+id/allr_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="全部"
                android:textColor="@color/color_radiobuttont"
                android:textSize="@dimen/text_fourteen" />


            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grayef" />

            <RadioButton
                android:id="@+id/ingr_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="申请中"
                android:textColor="@color/color_radiobuttont"
                android:textSize="@dimen/text_fourteen" />

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grayef" />

            <RadioButton
                android:id="@+id/yi_rb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="已交车"
                android:textColor="@color/color_radiobuttont"
                android:textSize="@dimen/text_fourteen" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/title_rg"
            android:background="@color/grayef" />

        <ListView
            android:id="@+id/dot_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:background="@null"
            android:divider="@color/grayef"
            android:dividerHeight="2px"
            android:listSelector="@color/transparent"
            android:padding="@dimen/five"
            android:scrollbars="none"></ListView>

        <include
            android:id="@+id/none"
            layout="@layout/include_none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>