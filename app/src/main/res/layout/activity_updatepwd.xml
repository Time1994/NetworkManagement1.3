<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayef"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/include_toptitle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifity" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        android:background="@drawable/bg_color_white"
        android:orientation="vertical"
        android:padding="@dimen/ten">

        <TextView
            android:id="@+id/mobile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:paddingLeft="@dimen/ten"
            android:text="手机号码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_fourteen"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mobile_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/twenty"
            android:paddingRight="@dimen/fifteen">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_add_mobile" />

            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/mobile_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入您的手机号码"
                android:inputType="number"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_fourteen" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@color/grayef" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/twenty"
            android:paddingRight="@dimen/fifteen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新的密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_add_pwd" />

            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/npwd_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入至少6位密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_fourteen" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@color/grayef" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/twenty"
            android:paddingRight="@dimen/fifteen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_add_pwd" />

            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/rpwd_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请再次确认密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_fourteen" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@color/grayef" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/twenty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_add_mobile" />

            <Button
                android:id="@+id/getcode_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:text="获取验证码"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_fourteen" />

            <TextView
                android:layout_width="1px"
                android:layout_height="@dimen/thirty"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/getcode_btn"
                android:background="@color/grayef" />

            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/code_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/getcode_btn"
                android:layout_toRightOf="@id/tv"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入短信验证码"
                android:inputType="number"
                android:maxLength="4"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_fourteen" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@color/grayef" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <Button
                android:id="@+id/sure_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/fortyf"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/fifteen"
                android:background="@drawable/btn_select"
                android:text="确认修改"
                android:textColor="@color/color_btn"
                android:textSize="@dimen/text_sixteen" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>