<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical"
    android:padding="@dimen/ten" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/white" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择用车时间"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixteen" />

        <ImageView
            android:id="@+id/cancel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_dialog_close"
            android:visibility="gone" />

        <TextView
            android:id="@+id/close_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="关闭"
            android:textColor="@color/grayef"
            android:textSize="@dimen/text_fourteen" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/hundredforty"
        android:layout_marginTop="@dimen/twenty"
        android:orientation="horizontal"
        android:weightSum="3" >

        <com.eroadcar.networkmanagement.view.widget.WheelView
            android:id="@+id/mins"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.3" />

        <com.eroadcar.networkmanagement.view.widget.WheelView
            android:id="@+id/data"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.7" />

        <!--<com.eroadcar.networkmanagement.view.widget.WheelView-->
            <!--android:id="@+id/hour"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:layout_weight="1.4" />-->
    </LinearLayout>

    <Button
        android:id="@+id/sure_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fortyf"
        android:layout_marginTop="@dimen/thirty"
        android:background="@drawable/btn_select"
        android:text="确认"
        android:textColor="@color/color_btn"
        android:textSize="@dimen/text_eightheen" />

</LinearLayout>